{
  "name": "serverless_boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for serverless framework with testing capabilities, linting and es6 preconfigured.",
  "main": "dist/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf api/lib",
    "lint": "eslint src test",
    "check": "npm run lint -s && dependency-check package.json --entry src",
    "watch": "watch 'npm run build' src test",
    "test": "babel-node test/index.js | tspec",
    "prebuild": "npm run check -s && npm run clean -s",
    "build": "babel --optional runtime src -d api/lib",
    "build:node_modules": "cd api && npm install && cd ..",
    "postbuild": "npm run test -s",
    "coverage": "babel-node node_modules/isparta/bin/isparta cover test/index.js",
    "coveralls": "npm run coverage -s && coveralls < coverage/lcov.info",
    "postcoveralls": "rimraf ./coverage",
    "prepublish": "npm run build -s",
    "deploy": "npm run build && npm run build:node_modules && cd api && serverless deploy",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "toc": "doctoc --github --title \"# Changelog\" CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BraunreutherA/serverless_boilerplate"
  },
  "keywords": [
    "node"
  ],
  "author": "Alexander Braunreuther <alexander.braunreuther@googlemail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BraunreutherA/serverless_boilerplate/issues"
  },
  "homepage": "https://github.com/BraunreutherA/serverless_boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.4",
    "dependency-check": "^2.5.1",
    "doctoc": "^0.15.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.15.0",
    "isparta": "^4.0.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "watch": "^0.16.0"
  },
  "dependencies": {
    "blue-tape": "^1.0.0",
    "bluebird": "^3.4.6"
  }
}
